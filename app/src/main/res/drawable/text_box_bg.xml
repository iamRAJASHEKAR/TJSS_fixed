<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <padding android:bottom="@dimen/activity_default_margin" android:top="@dimen/half_margin" />
                    <solid android:color="#01cccccc"/>
                </shape>
            </item>
            <item android:bottom="-35dp">
                <shape android:shape="line">
                    <solid android:color="#ccc"/>
                    <stroke android:width="2dp" android:color="#ccc" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_enabled="false">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <padding android:bottom="@dimen/half_margin"/>
                    <solid android:color="#01cccccc"/>
                </shape>
            </item>
        </layer-list>
    </item>


    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <padding android:bottom="@dimen/activity_default_margin" android:top="@dimen/half_margin" />
                    <solid android:color="#01cccccc"/>
                </shape>
            </item>
            <item android:bottom="-35dp">
                <shape android:shape="line">
                    <solid android:color="#ccc"/>
                    <stroke android:width="1dp" android:color="#ccc" />
                </shape>
            </item>
        </layer-list>
    </item>


</selector>
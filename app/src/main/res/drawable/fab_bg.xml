<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item >
        <shape android:shape="oval">
            <padding android:bottom="1dp"/>
            <size
                android:width="24dp"
                android:height="24dp" />
            <gradient
                android:angle="90"
                android:gradientRadius="26dp"
                android:startColor="#78000000"
                android:type="radial" />
        </shape>
    </item>

    <item>
        <shape android:shape="oval">
            <size
                android:width="24dp"
                android:height="24dp" />
            <solid android:color="@android:color/white" />
        </shape>
    </item>




</layer-list>
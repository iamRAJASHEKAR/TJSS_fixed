<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="invite_code_style" parent="TextAppearance.AppCompat.Title">
        <item name="android:layout_width">35dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:maxLength">1</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:layout_margin">@dimen/quarter_margin</item>
        <item name="android:background">@drawable/invite_code_bg</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="home_tabs_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/home_tabs_text_color</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingTop">@dimen/half_margin</item>
        <item name="android:drawablePadding">@dimen/quarter_margin</item>
        <item name="android:layout_gravity">bottom</item>
    </style>

    <style name="safety_circle_names_button_style">
        <item name="android:background">@drawable/safety_circle_names_button_bg</item>
        <item name="android:button">@null</item>
        <item name="android:layout_margin">@dimen/quarter_margin_half</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingBottom">@dimen/half_margin</item>
        <item name="android:paddingTop">@dimen/half_margin</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="safety_circle_item_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginRight">@dimen/activity_default_margin</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:layout_toRightOf">@id/drawerLeftMarginHack</item>
        <item name="android:drawableLeft">@drawable/grey_circle</item>
        <item name="android:drawablePadding">@dimen/activity_default_margin</item>
        <item name="android:drawableStart">@drawable/grey_circle</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingBottom">@dimen/half_margin</item>
        <item name="android:paddingTop">@dimen/half_margin</item>
    </style>

    <style name="drawer_round_corner_button_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_below">@+id/ltSafetyCirclesHolderMain</item>
        <item name="android:layout_marginTop">@dimen/quarter_margin</item>
        <item name="android:background">@drawable/view_more_button_outline</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:paddingBottom">@dimen/half_margin</item>
        <item name="android:paddingLeft">@dimen/activity_default_margin</item>
        <item name="android:paddingRight">@dimen/activity_default_margin</item>
        <item name="android:paddingTop">@dimen/half_margin</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

    <style name="drawer_buttons_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/activity_default_margin</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:drawablePadding">@dimen/activity_default_margin</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

    <style name="tjss_button_style">
        <item name="android:paddingLeft">@dimen/activity_default_margin</item>
        <item name="android:paddingRight">@dimen/activity_default_margin</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/activity_default_margin</item>
        <item name="android:layout_marginLeft">@dimen/activity_default_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_default_margin</item>
        <item name="android:layout_marginTop">@dimen/half_margin</item>
        <item name="android:background">@drawable/accent_button_bg</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/button_text_color</item>
    </style>

    <style name="plan_details_heading_style" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/half_margin</item>
        <item name="android:drawableTop">@drawable/ic_ios_paw</item>
    </style>

    <style name="round_button_with_stroke_grey">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/half_margin</item>
        <item name="android:background">@drawable/view_more_button_outline</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:paddingBottom">@dimen/half_margin</item>
        <item name="android:paddingLeft">@dimen/activity_default_margin</item>
        <item name="android:paddingRight">@dimen/activity_default_margin</item>
        <item name="android:paddingTop">@dimen/half_margin</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

    <style name="settings_button_style" parent="@style/TextAppearance.AppCompat.Subhead">
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:drawableEnd">@drawable/ic_chevron_right_24</item>
        <item name="android:drawableRight">@drawable/ic_chevron_right_24</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:paddingEnd" tools:ignore="NewApi">@dimen/activity_default_margin</item>
        <item name="android:paddingLeft">@dimen/activity_default_margin</item>
        <item name="android:paddingRight">@dimen/activity_default_margin</item>
        <item name="android:paddingStart" tools:ignore="NewApi">@dimen/activity_default_margin</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

    <style name="tjss_check_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:drawableEnd">@drawable/check_box_check</item>
        <item name="android:drawableRight">@drawable/check_box_check</item>
    </style>

    <style name="tjss_toggle_button_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/toggle_switch_bg</item>
        <item name="android:textOff"></item>
        <item name="android:textOn"></item>
        <item name="android:thumb">@drawable/toggle_button_bg</item>
    </style>

    <dimen name="quarter_margin_half">2dp</dimen>
</resources>

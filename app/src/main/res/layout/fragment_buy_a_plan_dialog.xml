<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/cardview_light_background"
    app:cardCornerRadius="@dimen/quarter_margin"
    app:cardPreventCornerOverlap="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_default_margin"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <include layout="@layout/extra_center_separator" />

        <android.support.v7.widget.AppCompatTextView
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_default_margin"
            android:text="@string/buy_a_plan" />


        <android.support.v7.widget.AppCompatTextView
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_default_margin"
            android:gravity="center"
            android:text="@string/plan_that_you_selected_needs_to_be_purchased_ndou_you_want_to_continue"
            android:textColor="@color/colorSecondaryText" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_default_margin"
            android:layout_marginTop="@dimen/activity_default_margin"
            android:orientation="horizontal">


            <android.support.v7.widget.AppCompatButton
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@drawable/round_corner_grey_button_bg"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:paddingBottom="@dimen/half_margin"
                android:paddingLeft="@dimen/activity_default_margin"
                android:paddingRight="@dimen/activity_default_margin"
                android:paddingTop="@dimen/half_margin"
                android:text="@android:string/cancel"
                android:textAllCaps="false"
                android:textColor="@android:color/white" />

            <android.support.v4.widget.Space
                android:layout_width="@dimen/activity_default_margin"
                android:layout_height="1dp" />

            <android.support.v7.widget.AppCompatButton
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@drawable/round_corner_accent_button_bg"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:paddingBottom="@dimen/half_margin"
                android:paddingLeft="@dimen/activity_default_margin"
                android:paddingRight="@dimen/activity_default_margin"
                android:paddingTop="@dimen/half_margin"
                android:text="@string/_continue"
                android:textAllCaps="false"
                android:textColor="@android:color/white" />


        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
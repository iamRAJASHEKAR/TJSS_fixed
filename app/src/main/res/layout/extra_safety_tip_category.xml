<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/cardview_light_background"
    app:cardCornerRadius="0dp"
    app:cardElevation="@dimen/quarter_margin"
    app:cardPreventCornerOverlap="true">

    <android.support.v7.widget.AppCompatCheckBox
        android:id="@+id/chkSafetyTipCategory"
        style="@style/tjss_check_style"
        android:layout_marginBottom="@dimen/quarter_margin"
        android:padding="@dimen/activity_default_margin"
        android:textColor="@color/colorPrimaryText"
        tools:checked="true"
        tools:text="Safety Tips" />

</android.support.v7.widget.CardView>
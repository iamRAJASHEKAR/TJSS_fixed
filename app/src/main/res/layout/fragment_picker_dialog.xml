<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/activity_default_margin">

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/lblAddAttachment"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:text="@string/add_attachment"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/lblPickerImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/half_margin"
        android:text="@string/image"
        android:textColor="@color/colorAccent"
        android:textSize="13sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lblAddAttachment"/>


    <android.support.v7.widget.AppCompatRadioButton
        android:id="@+id/rdoPickerImageGallery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_default_margin"
        android:button="@null"
        android:drawableLeft="@drawable/image_check_box_bg_gallery"
        android:drawableStart="@drawable/image_check_box_bg_gallery"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblPickerImage"
        tools:checked="true"/>

    <android.support.v7.widget.AppCompatRadioButton
        android:id="@+id/rdoPickerImageCamera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_default_margin"
        android:layout_marginStart="@dimen/activity_default_margin"
        android:button="@null"
        android:drawableLeft="@drawable/image_check_box_bg_camera"
        android:drawableStart="@drawable/image_check_box_bg_camera"
        app:layout_constraintLeft_toRightOf="@+id/rdoPickerImageGallery"
        app:layout_constraintTop_toTopOf="@+id/rdoPickerImageGallery"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/lblPickerVideo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/half_margin"
        android:text="@string/video"
        android:textColor="@color/colorAccent"
        android:textSize="13sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rdoPickerImageCamera"/>

    <android.support.v7.widget.AppCompatRadioButton
        android:id="@+id/rdoPickerVideoGallery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/half_margin"
        android:button="@null"
        android:drawableLeft="@drawable/video_check_box_bg_gallery"
        android:drawableStart="@drawable/video_check_box_bg_gallery"
        app:layout_constraintTop_toBottomOf="@id/lblPickerVideo"/>


    <android.support.v7.widget.AppCompatRadioButton
        android:id="@+id/rdoPickerVideoCamera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_default_margin"
        android:layout_marginStart="@dimen/activity_default_margin"
        android:button="@null"
        android:drawableLeft="@drawable/video_check_box_bg_camera"
        android:drawableStart="@drawable/video_check_box_bg_camera"
        app:layout_constraintLeft_toRightOf="@id/rdoPickerVideoGallery"
        app:layout_constraintTop_toTopOf="@+id/rdoPickerVideoGallery"/>


    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/lblPickerAudio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/half_margin"
        android:text="@string/audio"
        android:textColor="@color/colorAccent"
        android:textSize="13sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rdoPickerVideoGallery"/>


    <android.support.v7.widget.AppCompatRadioButton
        android:id="@+id/rdoPickerAudioGallery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/half_margin"
        android:button="@null"
        android:drawableLeft="@drawable/audio_check_box_bg_gallery"
        android:drawableStart="@drawable/audio_check_box_bg_gallery"
        app:layout_constraintTop_toBottomOf="@+id/lblPickerAudio"/>


    <android.support.v7.widget.AppCompatRadioButton
        android:id="@+id/rdoPickerAudioRecord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_default_margin"
        android:layout_marginStart="@dimen/activity_default_margin"
        android:button="@null"
        android:drawableLeft="@drawable/audio_check_box_bg_record"
        android:drawableStart="@drawable/audio_check_box_bg_record"
        app:layout_constraintLeft_toRightOf="@+id/rdoPickerAudioGallery"
        app:layout_constraintTop_toTopOf="@id/rdoPickerAudioGallery"/>


</android.support.constraint.ConstraintLayout>
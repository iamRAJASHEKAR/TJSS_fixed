<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginBottom="@dimen/quarter_margin"
             android:layout_marginEnd="@dimen/quarter_margin"
             android:layout_marginLeft="?android:attr/actionBarSize"
             android:layout_marginRight="@dimen/quarter_margin"
             android:layout_marginStart="?android:attr/actionBarSize"
             android:layout_marginTop="@dimen/quarter_margin">

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:background="@drawable/chat_from_right_middle_bg"
        android:drawableEnd="@drawable/ic_delete_message"
        android:drawablePadding="@dimen/half_margin"
        android:drawableRight="@drawable/ic_delete_message"
        android:text="@string/this_message_is_deleted"
        android:textColor="@android:color/white"/>

</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/quarter_margin"
    android:layout_marginEnd="?android:attr/actionBarSize"
    android:layout_marginRight="?android:attr/actionBarSize"
    android:layout_marginTop="@dimen/quarter_margin">

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/chat_bubble_left_middle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@+id/space"
        app:layout_constraintTop_toTopOf="parent"/>

    <android.support.v4.widget.Space
        android:id="@+id/space"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/activity_default_margin"
        android:layout_marginStart="@dimen/activity_default_margin"
        app:layout_constraintLeft_toRightOf="@+id/lblChatSenderName"/>


    <android.support.v7.widget.AppCompatImageButton
        android:id="@+id/btnPlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/quarter_margin"
        android:layout_marginLeft="@dimen/half_margin"
        android:layout_marginStart="@dimen/half_margin"
        android:layout_marginTop="@dimen/quarter_margin"
        android:background="?android:attr/selectableItemBackground"
        android:src="@drawable/play_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/lblChatSenderName"
        style="@style/Base.TextAppearance.AppCompat.Caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_default_margin"
        android:layout_marginStart="@dimen/activity_default_margin"
        app:layout_constraintBottom_toBottomOf="@id/btnPlay"
        app:layout_constraintLeft_toRightOf="@id/btnPlay"
        app:layout_constraintTop_toTopOf="@id/btnPlay"
        tools:text="Sony Raj"/>


</android.support.constraint.ConstraintLayout>
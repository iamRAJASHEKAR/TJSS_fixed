<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/activity_default_margin">




    <android.support.design.widget.TextInputLayout
        android:id="@+id/txtRegistrationEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_default_margin"
        android:layout_marginRight="@dimen/activity_default_margin"
        android:hint="@string/enter_your_email_address">


        <android.support.design.widget.TextInputEditText
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/text_box_bg"
            android:inputType="textEmailAddress" />


    </android.support.design.widget.TextInputLayout>

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_default_margin"
        android:drawableLeft="@drawable/ic_info"
        android:drawablePadding="@dimen/half_margin"
        android:drawableStart="@drawable/ic_info"
        android:gravity="top"
        android:text="@string/add_your_email_to_make_sure_you_can_recover_your_password"/>


</LinearLayout>
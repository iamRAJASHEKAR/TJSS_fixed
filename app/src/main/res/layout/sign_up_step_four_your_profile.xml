<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_default_margin"
    android:paddingRight="@dimen/activity_default_margin">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/half_margin">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgSignUpUserImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/user_image" />

        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/btnRegistrationSelectImage"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_alignEnd="@+id/imgSignUpUserImage"
            android:layout_alignRight="@+id/imgSignUpUserImage"
            android:layout_marginTop="-5dp"
            android:background="?android:attr/selectableItemBackground"
            android:src="@drawable/ic_add" />

    </RelativeLayout>

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/activity_default_margin"
        android:text="@string/add_photo" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/txtRegistrationName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_default_margin"
        android:layout_marginRight="@dimen/activity_default_margin"
        android:hint="@string/enter_your_name">


        <android.support.design.widget.TextInputEditText
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/text_box_bg"
            android:inputType="textEmailAddress" />


    </android.support.design.widget.TextInputLayout>

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_default_margin"
        android:drawableLeft="@drawable/ic_info"
        android:drawablePadding="@dimen/half_margin"
        android:drawableStart="@drawable/ic_info"
        android:gravity="top"
        android:text="@string/this_is_how_you_will_appear_on_your_map" />


</LinearLayout>
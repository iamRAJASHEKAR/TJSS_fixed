<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/scale5dp"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="@dimen/scale5dp"
            android:weightSum="5">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imgCircleImage"
                    android:layout_width="@dimen/circleDefaultImageViewSize"
                    android:layout_height="@dimen/circleDefaultImageViewSize"
                    android:layout_marginBottom="@dimen/half_margin"
                    android:layout_marginLeft="@dimen/activity_default_margin"
                    android:layout_marginStart="@dimen/activity_default_margin"
                    android:layout_marginTop="@dimen/half_margin"
                    android:src="@drawable/ic_users_dummy" />

            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.5">

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tvCircleMemberName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/scale5dp"
                    android:text="Name" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tvCircleName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/scale5dp"
                    android:text="Circle 1 " />

            </LinearLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5">

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/btnRequestCode"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/round_corner_accent_button_bg"
                    android:minHeight="0dp"
                    android:minWidth="0dp"
                    android:padding="@dimen/scale5dp"
                    android:text="Request Code"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white" />

            </RelativeLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/quarter_margin_half"
    app:cardBackgroundColor="@color/cardview_light_background"
    app:cardCornerRadius="@dimen/quarter_margin_half"
    app:cardPreventCornerOverlap="true">


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:paddingEnd="0dp"
        android:paddingLeft="@dimen/activity_default_margin"
        android:paddingRight="0dp"
        android:paddingStart="@dimen/activity_default_margin"
        android:paddingTop="@dimen/half_margin">


        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/lblPhoneContactName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            tools:text="Sony Raj" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/lblPhoneContactNumber"
            style="@style/TextAppearance.AppCompat.Caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/half_margin"
            app:layout_constraintTop_toBottomOf="@+id/lblPhoneContactName"
            tools:text="+91 9746363047" />


        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/btnAddContactToCircle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/activity_default_margin"
            android:background="?android:attr/selectableItemBackground"
            android:src="@drawable/add_round"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <android.support.v7.widget.AppCompatImageButton
            android:visibility="gone"
            android:id="@+id/btnDeleteHelpAlertContact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/activity_default_margin"
            android:layout_marginRight="@dimen/activity_default_margin"
            android:background="?android:attr/selectableItemBackground"
            android:padding="@dimen/quarter_margin"
            android:src="@drawable/ic_delete_forever"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>


        <android.support.v7.widget.AppCompatImageButton
            android:visibility="gone"
            android:id="@+id/btnEditHelpAlertContact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/half_margin"
            android:layout_marginRight="@dimen/half_margin"
            android:background="?android:attr/selectableItemBackground"
            android:padding="@dimen/quarter_margin"
            android:src="@drawable/ic_edit"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/btnDeleteHelpAlertContact"
            app:layout_constraintTop_toTopOf="parent"/>



    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>
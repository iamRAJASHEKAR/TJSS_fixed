<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@null"
    android:layout_marginBottom="10dp">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/activity_default_margin"
        android:layout_marginBottom="@dimen/scale5dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_default_margin"
            android:gravity="left"
            android:orientation="vertical">

            <include layout="@layout/extra_center_separator" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_c_i_Title"
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_default_margin"
                android:text="Title" />


            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_c_i_Description"
                style="@style/TextAppearance.AppCompat.Subhead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_default_margin"
                android:gravity="center"
                android:text="@string/loerm_ipsum_is_simply"
                android:textColor="@color/colorSecondaryText" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_c_i_Amount"
                style="@style/TextAppearance.AppCompat.Subhead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_default_margin"
                android:gravity="center"
                android:text="$0"
                android:textColor="@color/colorSecondaryText" />


        </LinearLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>
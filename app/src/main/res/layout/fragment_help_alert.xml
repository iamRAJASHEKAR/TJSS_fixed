<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/extra_toolbar" />

    <android.support.v7.widget.AppCompatTextView
        style="@style/TextAppearance.AppCompat.Subhead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lblAddEmergencyContact"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/addContactHeader"
        android:textStyle="bold"
        android:layout_marginTop="12dp"
        android:textSize="20sp"/>

    <android.support.v7.widget.AppCompatTextView
        style="@style/TextAppearance.AppCompat.Subhead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_default_margin"
        android:layout_marginStart="@dimen/activity_default_margin"
        android:text="@string/addContactDescription"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_margin="@dimen/margin_7dp"
        android:textColor="@color/colorPrimaryText" />



    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btnAddNewContact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_default_margin"
        android:background="@drawable/add_favorite_place_bg"
        android:drawableLeft="@drawable/ic_add_circle_white_32"
        android:drawablePadding="@dimen/activity_default_margin"
        android:drawableStart="@drawable/ic_add_circle_white_32"
        android:gravity="start|center_vertical"
        android:padding="@dimen/half_margin"
        android:text="@string/add_new_contact"
        android:textAllCaps="false"
        android:textColor="@android:color/white" />

    <android.support.v7.widget.AppCompatTextView
        style="@style/TextAppearance.AppCompat.Subhead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_default_margin"
        android:layout_marginStart="@dimen/activity_default_margin"
        android:text="@string/your_help_alert_numbers"
        android:textColor="@color/colorPrimaryText" />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/lstHelpAlertContacts"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/activity_default_margin"
        android:layout_marginRight="@dimen/activity_default_margin"
        android:layout_marginTop="@dimen/half_margin"
        android:layout_weight="1" />


    <android.support.v7.widget.AppCompatImageButton
        android:id="@+id/btnSendHelpAlert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/home_fab_bg"
        android:src="@drawable/home_fab" />

    <android.support.v7.widget.AppCompatTextView
        style="@style/TextAppearance.AppCompat.Caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/half_margin"
        android:text="@string/tap_to_send_a_help_alert" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/activity_default_margin"
    tools:background="#ccc">


    <android.support.v7.widget.AppCompatTextView
        android:id="@id/header"
        style="@style/TextAppearance.AppCompat.Subhead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/half_margin"
        android:text="@string/add_new_contact"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <android.support.v7.widget.AppCompatTextView
        android:id="@id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_default_margin"
        android:gravity="center_horizontal"
        android:text="@string/please_add_a_contact_manually_or_select_one_from_your_contacts"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header" />


    <android.support.v4.widget.Space
        android:id="@id/centerSeparator"
        android:layout_width="@dimen/activity_default_margin"
        android:layout_height="1dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btnAddContactManually"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_default_margin"
        android:background="@drawable/round_corner_grey_button_bg"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:paddingBottom="@dimen/half_margin"
        android:paddingLeft="@dimen/activity_default_margin"
        android:paddingRight="@dimen/activity_default_margin"
        android:paddingTop="@dimen/half_margin"
        android:text="@string/_new"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        app:layout_constraintRight_toLeftOf="@+id/centerSeparator"
        app:layout_constraintTop_toBottomOf="@+id/description" />


    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btnAddContactFromContacts"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/round_corner_accent_button_bg"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:paddingBottom="@dimen/half_margin"
        android:paddingLeft="@dimen/activity_default_margin"
        android:paddingRight="@dimen/activity_default_margin"
        android:paddingTop="@dimen/half_margin"
        android:text="@string/choose_contact"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        app:layout_constraintLeft_toRightOf="@+id/centerSeparator"
        app:layout_constraintTop_toBottomOf="@+id/description" />

</android.support.constraint.ConstraintLayout>
